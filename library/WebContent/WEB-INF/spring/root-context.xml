<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
           http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.2.xsd">
          
	<!-- Scans for application @Component and @Service to deploy -->
 	<context:component-scan base-package="it.univaq.mwt.j2ee.library.business.impl"/>	 
 	
 	
	<jee:jndi-lookup id="dataSource" jndi-name="jdbc/librarydb"/>
<!--   questo tag definisce il bean datasource preso da jdbc/librarydb definito nel file di context
	in Meta inf context.xml
 -->
</beans>